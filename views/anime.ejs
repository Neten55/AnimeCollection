<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Anime Collection</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header', { user: user }) %>
    <main>
        <section class="anime-list">
            <h2>My Anime Collection</h2>
            <% if (error) { %>
                <p class="error"><%= error %></p>
            <% } %>
            <ul>
                <% animeList.forEach(anime => { %>
                    <li>
                        <strong><%= anime.title %></strong> - <%= anime.status %>
                        <form action="/anime/delete/<%= anime.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <!-- Optionally add update form here -->
                    </li>
                <% }) %>
            </ul>
            <form action="/anime" method="POST" class="form">
                <input type="text" name="title" placeholder="Anime Title" required>
                <input type="text" name="status" placeholder="Status" required>
                <button type="submit" class="btn">Add Anime</button>
            </form>
        </section>
    </main>
    <%- include('partials/footer') %>
</body>
</html>